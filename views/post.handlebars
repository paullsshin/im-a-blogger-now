<div class="post">
    <article class="card">
        <div class="card-header flex-row justify-space-between">
            <h2>
                {{post.title}}
            </h2>
            <div>
                Posted By {{post.User.username}} On {{format_date post.createdAt}}
            </div>
        </div>
        <div class="card-body">
                {{post.body}}
            </div>
    </article>
    {{#if post.Comments}}
    <section class="card">
        <div class="card-header">
            <h3>Comments</h3>
        </div>
        <div class="card-body">
            {{#each post.Comments}}
            <div>
                <p>
                    {{body}}
                </p>
                <p>
                    &mdash; {{User.username}}, {{format_date createdAt}}
                </p>
            </div>
            {{/each}}
        </div>
    </section>
    {{/if}}
    <form id="newCommentForm" class="card">
        <div class="card-header">
            <h3>Add a Comment!</h3>
        </div>
        <div class="card-body">
            <input type="hidden" name="post-id" value="{{post.id}}"/>
            <label for="commentBody" class="form-label">
                Comment
            </label>
            <textarea name="commentBody" rows="4" class="form-input"></textarea>
            <button class="btn" type="submit">Submit</button>
        </div>
    </form>
</div>

<script src="/js/comment.js"></script>